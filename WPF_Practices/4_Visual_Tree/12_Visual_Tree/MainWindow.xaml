<Window x:Class="_12_Visual_Tree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_Visual_Tree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Click Me" Grid.Row="0">
        </Button>
        <TextBox Text="Some Text" Grid.Row="1" HorizontalContentAlignment="Center" VerticalAlignment="Center">
        </TextBox>
        <RadioButton Content="Radio Button">
            
        </RadioButton>
    </Grid>
</Window>
