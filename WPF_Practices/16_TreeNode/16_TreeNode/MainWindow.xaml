<Window x:Class="_16_TreeNode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16_TreeNode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TreeView ItemsSource="{Binding Root}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:Node}" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Data}"/>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
            <StackPanel Orientation="Horizontal" Height="30">
                <Button Name="btnOneB" Click="OnBubblingClicked" Width="40" Content="1" Margin="5 0 5 0"/>
                <Button Name="btnTwoB" Click="OnBubblingClicked" Width="40" Content="2" Margin="5 0 5 0"/>
                <Button Name="btnThreeB" Click="OnBubblingClicked" Width="40" Content="3" Margin="5 0 5 0"/>
                <Button Name="btn11B" Click="OnBubblingClicked" Width="40" Content="11" Margin="5 0 5 0"/>
                <Button Name="btn12B" Click="OnBubblingClicked" Width="40" Content="12" Margin="5 0 5 0"/>
                <Button Name="btn21B" Click="OnBubblingClicked" Width="40" Content="21" Margin="5 0 5 0"/>
                <Button Name="btn22B" Click="OnBubblingClicked" Width="40" Content="22" Margin="5 0 5 0"/>
                <Button Name="btn31B" Click="OnBubblingClicked" Width="40" Content="31" Margin="5 0 5 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30">
                <Button Name="btnOneT" Click="OnTunnelingClicked" Width="40" Content="1" Margin="5 0 5 0"/>
                <Button Name="btnTwoT" Click="OnTunnelingClicked" Width="40" Content="2" Margin="5 0 5 0"/>
                <Button Name="btnThreeT" Click="OnTunnelingClicked" Width="40" Content="3" Margin="5 0 5 0"/>
                <Button Name="btn11T" Click="OnTunnelingClicked" Width="40" Content="11" Margin="5 0 5 0"/>
                <Button Name="btn12T" Click="OnTunnelingClicked" Width="40" Content="12" Margin="5 0 5 0"/>
                <Button Name="btn21T" Click="OnTunnelingClicked" Width="40" Content="21" Margin="5 0 5 0"/>
                <Button Name="btn22T" Click="OnTunnelingClicked" Width="40" Content="22" Margin="5 0 5 0"/>
                <Button Name="btn31T" Click="OnTunnelingClicked" Width="40" Content="31" Margin="5 0 5 0"/>
            </StackPanel>



        </StackPanel>

    </Grid>
</Window>
