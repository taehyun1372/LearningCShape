<UserControl x:Class="_13_Custom_Control.Views.CustomControl1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_13_Custom_Control.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Canvas Background="LightGray">
            <!-- Triangle 1 (top) -->
            <Path x:Name="TriangleTop" 
              Stroke="Black" StrokeThickness="2" Fill="LightBlue"
              Data="M 100,20 L 140,80 L 60,80 Z" Canvas.Left="33.128" Canvas.Top="101.333" />

            <!-- Triangle 2 (bottom-left) -->
            <Path x:Name="TriangleLeft" 
              Stroke="Black" StrokeThickness="2" Fill="LightGreen"
              Data="M 20,140 L 80,100 L 80,180 Z" Canvas.Left="99.427" Canvas.Top="-5.334" />

            <!-- Triangle 3 (bottom-right) -->
            <Path x:Name="TriangleRight" 
              Stroke="Black" StrokeThickness="2" Fill="LightCoral"
              Data="M 180,100 L 220,140 L 180,180 Z" />
        </Canvas>
    </Grid>
</UserControl>
